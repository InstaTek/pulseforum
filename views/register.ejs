<%- include('partials/head', { title: 'PulseForum — Create account' }) %>
<%- include('partials/nav', { active: '' }) %>

<main class="authWrap">
  <section class="authCard" aria-label="Register form">
    <h1>Create account</h1>
    <p>Pick a handle and you’re in.</p>

    <% if (error) { %>
      <div class="pill" style="border-color: rgba(239,68,68,0.35); background: rgba(239,68,68,0.12);">
        <strong>Error:</strong> <%= error %>
      </div>
      <div style="height:10px;"></div>
    <% } %>

    <form method="post" action="/register">
      <div class="field">
        <label for="username">Username</label>
        <input id="username" name="username" type="text" placeholder="e.g. Rybo" required />
      </div>

      <div class="field">
        <label for="email">Email</label>
        <input id="email" name="email" type="email" placeholder="you@example.com" required />
      </div>

      <div class="field">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" placeholder="Use a strong one" required />
      </div>

      <div class="authActions">
        <button class="btn primary" type="submit">Create account</button>
        <a class="mutedLink" href="/login">Log in</a>
      </div>
    </form>
  </section>
</main>

</body></html>
